    "dev": "pnpm build -- watch"
  },
  "peerDependencies": {
    "next": ">= 10.0.0",
    "sharp": ">= 0.30.6"
  },
  "devDependencies": {
    "microbundle": "0.13.0",
    "next": "12.1.6",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "typescript": "4.7.3"
  }
}
