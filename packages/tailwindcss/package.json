{
  "name": "@plaiceholder/tailwindcss",
  "version": "1.0.0",
  "description": "Roll-you-own placeholders for Tailwind.",
  "author": "Joe Bell <joe@joebell.co.uk>",
  "license": "Apache-2.0",
  "funding": "https://plaiceholder.co",
  "main": "dist/plugin.js",
  "exports": {
    ".": "./dist/plugin.js",
    "./plugin": "./dist/plugin.js",
    "./utils": "./dist/utils.js"
  },
  "typings": "./dist/plugin.d.ts",
  "typesVersions": {
    "*": {
      "plugin": [
        "./dist/plugin.d.ts"
      ],
      "utils": [
        "./dist/utils.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "microbundle src/*.ts --external sharp --no-compress --target node --tsconfig tsconfig.json",
    "dev": "yarn build -- --watch",
    "clean": "rimraf {dist,.rts2*}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joe-bell/plaiceholder.git"
  },
  "keywords": [
    "lqip",
    "placeholder",
    "plaiceholder",
    "tailwindcss"
  ],
  "bugs": {
    "url": "https://github.com/joe-bell/plaiceholder/issues"
  },
  "homepage": "https://github.com/joe-bell/plaiceholder#readme",
  "dependencies": {
    "@plaiceholder/core": "^1.0.0",
    "@plaiceholder/next": "^1.0.0",
    "plaiceholder": "^1.0.0",
    "css.escape": "1.5.1",
    "make-synchronous": "0.1.1"
  },
  "devDependencies": {
    "tailwindcss": "2.1.2"
  },
  "peerDependencies": {
    "tailwindcss": ">= 2.1.1"
  }
}
