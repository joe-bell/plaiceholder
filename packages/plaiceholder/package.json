{
  "name": "plaiceholder",
  "version": "2.4.0",
  "description": "Beautiful image placeholders, without the hassle.",
  "author": "Joe Bell <joe@joebell.co.uk>",
  "license": "Apache-2.0",
  "repository": "joe-bell/plaiceholder.git",
  "bugs": "https://github.com/joe-bell/plaiceholder/issues",
  "homepage": "https://github.com/joe-bell/plaiceholder#readme",
  "keywords": [
    "base64",
    "blurhash",
    "css",
    "lqip",
    "placeholder",
    "plaiceholder",
    "svg"
  ],
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "microbundle --external sharp --no-compress --target node --tsconfig tsconfig.json",
    "clean": "rimraf {dist,.rts2*}",
    "dev": "pnpm build -- watch",
    "lint:ts": "tsc --noEmit"
  },
  "peerDependencies": {
    "sharp": ">= 0.30.6"
  },
  "dependencies": {
    "blurhash": "1.1.4",
    "image-size": "1.0.0",
    "node-cache": "5.1.2",
    "node-fetch": "2.6.7"
  },
  "devDependencies": {
    "@types/node": "14.17.15",
    "@types/sharp": "0.30.2",
    "microbundle": "0.13.0",
    "typescript": "4.7.3"
  }
}
